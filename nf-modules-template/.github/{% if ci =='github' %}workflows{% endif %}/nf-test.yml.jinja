name: Run nf-test
on:
  push:
    branches:
      # https://docs.renovatebot.com/key-concepts/automerge/#branch-vs-pr-automerging
      - "renovate/**" # branches Renovate creates
    paths-ignore:
      - "**/meta.yml"
  pull_request:
    branches: [{{ default_branch }}]
    paths-ignore:
      - "**/meta.yml"
  merge_group:
    types: [checks_requested]
    branches: [{{ default_branch }}]
  workflow_dispatch:

# Cancel if a newer run is started
concurrency:
  group: {% raw %}${{ github.workflow }}-${{ github.event.pull_request.number || github.ref }}{% endraw %}
  cancel-in-progress: true

env:
  GITHUB_TOKEN: {% raw %}${{ secrets.GITHUB_TOKEN }}{% endraw %}
  # renovate: datasource=github-releases depName=askimed/nf-test versioning=semver
  NFT_VER: "0.9.2"
  NXF_ANSI_LOG: false
  NXF_SINGULARITY_CACHEDIR: {% raw %}${{ github.workspace }}/.singularity{% endraw %}
  NXF_SINGULARITY_LIBRARYDIR: {% raw %}${{ github.workspace }}/.singularity{% endraw %}
  # renovate: datasource=github-releases depName=nextflow/nextflow versioning=semver
  NXF_VER: "25.04.0"

jobs:
  nf-test-changes:
    name: nf-test-changes
    runs-on:
      - {% raw %}runs-on=${{ github.run_id }}-nf-test-changes{% endraw %}
      - runner=4cpu-linux-x64
      - image=ubuntu22-full-x64
    outputs:
      # Expose detected tags as 'modules' and 'workflows' output variables
      paths: {% raw %}${{ steps.list.outputs.components }}{% endraw %}
      modules: {% raw %}${{ steps.components.outputs.modules }}{% endraw %}
      subworkflows: {% raw %}${{ steps.components.outputs.subworkflows}}{% endraw %}
      shard: {% raw %}${{ steps.set-shards.outputs.shard }}{% endraw %}
      total_shards: {% raw %}${{ steps.set-shards.outputs.total_shards }}{% endraw %}
    steps:
      - name: Clean Workspace # Purge the workspace in case it's running on a self-hosted runner
        run: |
          ls -la ./
          rm -rf ./* || true
          rm -rf ./.??* || true
          ls -la ./
      - uses: actions/checkout@08c6903cd8c0fde910a37f88322edcfb5dd907a8 # v5
        with:
          fetch-depth: 0

      - name: List nf-test files
        id: list
        uses: adamrtalbot/detect-nf-test-changes@de3c3c8e113031b4f15a3c1104b5f135e8346997 # v0.0.6
        with:
          head: {% raw %}${{ github.sha }}{% endraw %}
          base: {% raw %}${{ github.event.pull_request.base.sha || github.event.merge_group.base_sha || 'origin/master' }}{% endraw %}
          n_parents: 0
          exclude_tags: "gpu"

      - name: Separate modules and subworkflows
        id: components
        run: |
          echo modules=$(echo {% raw %}'${{ steps.list.outputs.components }}'{% endraw %} | jq -c '. | map(select(contains("modules"))) | map(gsub("modules/{{ short_org_name }}/"; ""))') >> $GITHUB_OUTPUT
          echo subworkflows=$(echo {% raw %}'${{ steps.list.outputs.components }}'{% endraw %} | jq '. | map(select(contains("subworkflows"))) | map(gsub("subworkflows/{{ short_org_name }}/"; ""))') >> $GITHUB_OUTPUT

      - name: get number of shards
        id: set-shards
        if: {% raw %}${{ steps.list.outputs.components != '[]' }}{% endraw %}
        uses: ./.github/actions/get-shards
        env:
          NFT_VER: {% raw %}${{ env.NFT_VER }}{% endraw %}
        with:
          max_shards: 15
          paths: {% raw %}"${{ join(fromJson(steps.list.outputs.components ), ' ') }}"{% endraw %}

      - name: debug
        run: |
          echo {% raw %}${{ steps.list.outputs.components }}{% endraw %}
          echo {% raw %}${{ steps.components.outputs.modules }}{% endraw %}
          echo {% raw %}${{ steps.components.outputs.subworkflows }}{% endraw %}
          echo {% raw %}${{ steps.set-shards.outputs.shard }}{% endraw %}
          echo {% raw %}${{ steps.set-shards.outputs.total_shards }}{% endraw %}

  nf-test:
    runs-on:
      - {% raw %}runs-on=${{ github.run_id }}{% endraw %}
      - {% raw %}runner=4cpu-linux-${{ matrix.arch }}{% endraw %}
      - {% raw %}image=ubuntu24-full-${{ matrix.arch }}{% endraw %}
    name: {% raw %}"${{ matrix.arch }} | ${{ matrix.profile }} | ${{ matrix.shard }}"{% endraw %}
    needs: [nf-test-changes]
    if: {% raw %}${{ needs.nf-test-changes.outputs.total_shards != '0' }}{% endraw %}
    strategy:
      fail-fast: false
      matrix:
        shard: {% raw %}${{ fromJson(needs.nf-test-changes.outputs.shard) }}{% endraw %}
        profile: [conda, docker, singularity]
        arch:
          - x64
          # FIXME
          # - arm64
    env:
      NXF_ANSI_LOG: false
      TOTAL_SHARDS: {% raw %}${{ needs.nf-test-changes.outputs.total_shards }}{% endraw %}
    outputs:
      filtered_paths: {% raw %}${{ steps.filter.outputs.filtered_paths }}{% endraw %}

    steps:
      - uses: actions/checkout@08c6903cd8c0fde910a37f88322edcfb5dd907a8 # v5
        with:
          fetch-depth: 0

      - name: Filter paths
        id: filter
        run: |
          {% raw %}PATHS='${{ needs.nf-test-changes.outputs.paths }}'{% endraw %}
          FILTERED=$(jq -n -c \
            --arg profile {% raw %}"${{ matrix.profile }}"{% endraw %} \
            --argjson input_paths "$PATHS" \
            '
            def get_skip_list: inputs | .[$profile] // [];

            # Get skip list and filter
            get_skip_list as $skip_patterns |

            # Debug output
            ($skip_patterns | "Skip patterns: " + (map("  - " + .) | join(","))) |
            debug |

            # Do the actual filtering
            $input_paths | map(
              . as $path |
              select($skip_patterns | all(. as $pattern | ($path | startswith($pattern)) | not))
            ) as $result |

            # Debug what was skipped
            (if ($input_paths - $result) | length > 0 then
              "Skipped: " + (($input_paths - $result) | map("  - " + .) | join(","))
            else
              "No paths skipped"
            end) |
            debug |

            $result
            ' .github/skip_nf_test.json)

          echo "filtered_paths=${FILTERED}" >> $GITHUB_OUTPUT

      - name: debug
        run: |
          echo filtered_paths = {% raw %}${{ steps.filter.outputs.filtered_paths }}{% endraw %}

      - name: Run nf-test Action
        if: {% raw %}${{steps.filter.outputs.filtered_paths != '[]'}}{% endraw %}
        continue-on-error: ${% raw %}{{ runner.arch == 'ARM64' }}{% endraw %}
        uses: ./.github/actions/nf-test-action
        env:
          SENTIEON_ENCRYPTION_KEY: {% raw %}${{ secrets.SENTIEON_ENCRYPTION_KEY }}{% endraw %}
          SENTIEON_LICENSE_MESSAGE: {% raw %}${{ secrets.SENTIEON_LICENSE_MESSAGE }}{% endraw %}
          SENTIEON_LICSRVR_IP: {% raw %}${{ secrets.SENTIEON_LICSRVR_IP }}{% endraw %}
          SENTIEON_AUTH_MECH: "GitHub Actions - token"
        with:
          profile: {% raw %}${{ matrix.profile }}${{ runner.arch == 'ARM64' && ',arm64,wave' || '' }}{% endraw %}
          shard: {% raw %}${{ matrix.shard }}{% endraw %}
          total_shards: {% raw %}${{ env.TOTAL_SHARDS }}{% endraw %}
          paths: {% raw %}"${{ join(fromJson(steps.filter.outputs.filtered_paths), ' ') }}"{% endraw %}

  confirm-pass-nf-test:
    runs-on:
      - {% raw %}runs-on=${{ github.run_id }}-confirm-pass-nf-test{% endraw %}
      - runner=4cpu-linux-x64
      - image=ubuntu22-full-x64
    needs: [nf-test]
    if: always()
    steps:
      - name: One or more tests failed
        if: {% raw %}${{ contains(needs.*.result, 'failure') }}{% endraw %}
        run: exit 1

      - name: One or more tests cancelled
        if: {% raw %}${{ contains(needs.*.result, 'cancelled') }}{% endraw %}
        run: exit 1

      - name: If no tests run, but filtered_paths was not empty and no tests succeeded, fail
        if: {% raw %}${{ needs.nf-test.outputs.filtered_paths != '' && !contains(needs.*.result, 'success') }}{% endraw %}
        run: exit 1

      - name: All tests ok
        if: {% raw %}${{ contains(needs.*.result, 'success') }}{% endraw %}
        run: exit 0

      - name: debug-print
        if: always()
        run: |
          echo "::group::DEBUG: `needs` Contents"
          echo {% raw %}"DEBUG: toJSON(needs) = ${{ toJSON(needs) }}"{% endraw %}
          echo {% raw %}"DEBUG: toJSON(needs.*.result) = ${{ toJSON(needs.*.result) }}"{% endraw %}
          echo {% raw %}"DEBUG: needs.nf-test.outputs.filtered_paths = ${{ needs.nf-test.outputs.filtered_paths }}"{% endraw %}
          echo "::endgroup::"

      - name: Clean Workspace # Purge the workspace in case it's running on a self-hosted runner
        if: always()
        run: |
          ls -la ./
          rm -rf ./* || true
          rm -rf ./.??* || true
          ls -la ./
